{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "app.ts",
    "src/**/*.ts"
  ],
  "baseUrl": ".",
  "paths": {
    "@/*": [
      "src/*"
    ],
  }
}